{
  "extends": "@monorepo/tsconfig/base.json",
  "include": ["**/*.ts", "**/*.tsx", "vite.config.js"],

  "compilerOptions": {
    "types": ["vite/client"],
    /* This is for the Paraglide plugin */
    "allowJs": true,
    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
